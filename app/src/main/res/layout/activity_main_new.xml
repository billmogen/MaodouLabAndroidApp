<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main_new"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_main_vertical_margin"
    android:paddingLeft="@dimen/activity_main_horizontal_margin"
    android:paddingRight="@dimen/activity_main_horizontal_margin"
    android:paddingTop="@dimen/activity_main_vertical_margin"
    tools:context="com.espressif.iot.ui.main.MainActivityNew">

    <RelativeLayout
        android:id="@+id/ly_top_bar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/esp_actionbar_color">

        <TextView
            android:id="@+id/txt_topbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="@color/esp_qrcode_result_view"
            android:text="@string/app_name"/>


        <View
            android:layout_width="match_parent"
            android:layout_height="2dip"
            android:background="@color/div_white"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>



    <LinearLayout
        android:id="@+id/main_tab_bar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:background="@color/bg_white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/main_tab_search"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/tab_menu_bg"
            android:drawablePadding="3dp"
            android:drawableTop="@drawable/tab_menu_search"
            android:gravity="center"
            android:padding="5dp"
            android:text="@string/esp_tab_search"
            android:textColor="@drawable/tab_menu_text"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/main_tab_guide"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/tab_menu_bg"
            android:drawablePadding="3dp"
            android:drawableTop="@drawable/tab_menu_guide"
            android:gravity="center"
            android:padding="5dp"
            android:text="@string/esp_tab_guide"
            android:textColor="@drawable/tab_menu_text"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/main_tab_personal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/tab_menu_bg"
            android:drawablePadding="3dp"
            android:drawableTop="@drawable/tab_menu_personal"
            android:gravity="center"
            android:padding="5dp"
            android:text="@string/esp_tab_personal"
            android:textColor="@drawable/tab_menu_text"
            android:textSize="14sp" />



    </LinearLayout>

    <View
        android:id="@+id/div_tab_bar"
        android:layout_width="match_parent"
        android:layout_height="2dip"
        android:background="@color/div_white"
        android:layout_above="@id/main_tab_bar"/>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/ly_top_bar"
        android:layout_above="@id/div_tab_bar"
        android:background="@color/bg_white"
        android:id="@+id/ly_content">

    </FrameLayout>


</RelativeLayout>
